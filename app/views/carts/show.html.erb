<p id="notice"><%= notice %></p>

<div class="has-text-right">
  <%= link_to 'Keep Shopping', root_path, class: 'card-link' %>
</div>

<section class="section">
  <%= render(@cart.item_orders) %>

  <div class="column">
    <div class="column">
      <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
    </div>
    <div class="column total has-text-right">
      <h4 class="title is-4">
        <span class="f5 has-text-grey">Total:</span><%= number_to_currency(@cart.total_price) %>
      </h4>
    </div>
  </div>
</section>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
