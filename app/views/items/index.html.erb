<section class="jumbotron text-center">
  <div class="container">
    <h2 class="jumbotron-heading">Welcome to Colorful Creations by Tinamarie!</h2>
      <p class="lead">
        All items you see below are uniquely hand-painted or hand-crafted. If you see something you like, please select "Place Order" to send me an email. To learn more about me and find out about upcoming art shows I will be at, select "About".
      </p>
  </div>
</section>

<div class="row" style="padding-right: 5.2rem;">
  <% @items.each do |item| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <%= image_tag item.photo.to_s, class: 'card-img-top' %>
        <br /><br />
        <h5 class="card-title"><%= item.summary %></h5><br />
        <h6 class="card-subtitle mb-2 text-muted">&#36;<%= item.price %>0</h6><br />
        <%= link_to 'Details', item_path(item.id), class: 'card-link' %>
        <br />
        <br />
        <% if admin_signed_in? %>
          <%= link_to 'Edit', edit_admin_item_path(item.id), class: 'card-link' %>
          <%= link_to 'Delete', admin_item_path(item.id), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'card-link' %>
        <% end %>
      </div>
    </div>
    <hr />
  <% end %>
</div>




  
   
