<br />
<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Item</h1>
  <%= simple_form_for @item, :method => :PATCH do |f| %>
    <%= f.input :summary %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file, label: "Upload Image" %>
    <br />
    <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
  <br />
</div>